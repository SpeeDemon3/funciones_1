#Calculo del area de un triangulo

def area(base, altura):
    operacion = (base * altura) / 2
    print(operacion)
    return area
    
area(23,3)

#Calculo del area de un circulo

def areaCirculo():
    operacion = (r** 2) * 3.14
    print(operacion)
    return

r = 3    
areaCirculo()
